{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "rootDir": "src",
    "module": "commonjs",
    "target": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "allowJs": true,
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ]
}
